<%
  use Gitprep::API;
  my $api = Gitprep::API->new($self);
  
  my $users = $api->users;
%>

% layout 'common';
  %= include '/css/common';
  
  %= stylesheet begin
    .users .uheader {
      border: 1px solid #ccc;
      font-size:150%;
      padding:5px;
    }
    .users .urecord {
      border: 1px solid #ccc;
      border-top:none;
      padding:5px;
    }
    .users .uname {
      font-size:140%;
      padding:5px;
    }
    
    .users .uname a {
      color:#4183C4;
    }
  % end
  
  %= include '/include/header', title => 'Gitprep';
  <div class="main_panel">
    <table class="users">
      <th class="uheader">User</th>
      % for my $user (@$users) {
        <tr class="urecord">
          <td class="uname">
            <a class="ubar" href="<%= url_for("/$user->{id}") %>">
              <%= $user->{id} %>
            </a>
          </td>
        </tr>
      % }
    </table>
  </div>
  %= include '/include/footer';
