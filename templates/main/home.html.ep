  <div class="container" style="min-heigth:500px">
    <h3>Users</h3>
    <ul class="nav nav-tabs nav-stacked">
      % for my $user (@$users) {
        <li>
          <a href="<%= url_for("/$user->{id}") %>">
            <%= $user->{id} %>
          </a>
        </li>
      % }
    </ul>
  </div>
  %= include '/include/footer';
